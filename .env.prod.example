# Production Environment Configuration
# Copy this file to .env.prod and fill in your actual values

# Database Configuration
POSTGRES_DB=mood_diary_prod
POSTGRES_USER=mood_user_prod
POSTGRES_PASSWORD=strong_production_password_here

# Redis Configuration
REDIS_PASSWORD=strong_redis_password_here

# API Keys (REQUIRED)
TELEGRAM_BOT_TOKEN=your_production_telegram_bot_token
GEMINI_API_KEY=your_production_gemini_api_key

# Security (CHANGE THESE!)
SECRET_KEY=super-strong-secret-key-for-production-change-this

# Application Settings
ENVIRONMENT=production
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend Configuration
VITE_API_URL=https://yourdomain.com/api
VITE_APP_NAME=AI Mood Diary

# Performance
WORKERS=4
LOG_LEVEL=INFO

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here

# Production specific
DEBUG=false
RELOAD=false